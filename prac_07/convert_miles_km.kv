BoxLayout:
    orientation: 'vertical'
    # text input and up and down arrows
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: miles
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: "up"
            Button:
                text: "down"
    # rest of body
    Button:
        text: "convert miles to kilometers"
        on_press: app.convert_miles_to_kilometers(int(miles.text))
    Label:
        text: "this is a test message"


